{
  "name": "cluster-cleanup",
  "version": "2.1.0",
  "description": "Library to fill the gap between the SDK and the CLI/Console for deleting an ECS cluster",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cluster-cleanup": "bin/cluster-cleanup"
  },
  "scripts": {
    "test": "nyc ava",
    "test:all": "ava",
    "test:unit": "ava src/**/*.spec.ts",
    "test:functional": "ava test/functional/*.spec.ts",
    "open-coverage": "npx open coverage/index.html",
    "build": "tsc",
    "start": "npm run build",
    "clean": "npx rimraf dist/*.js dist/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YashdalfTheGray/cluster-cleanup.git"
  },
  "keywords": [
    "aws",
    "ecs"
  ],
  "author": "Yash Kulshrestha",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/YashdalfTheGray/cluster-cleanup/issues"
  },
  "homepage": "https://github.com/YashdalfTheGray/cluster-cleanup#readme",
  "devDependencies": {
    "@types/node": "~17.0.10",
    "ava": "~4.0.1",
    "nyc": "~15.1.0",
    "ts-node": "~10.5.0",
    "typescript": "~4.5.5"
  },
  "dependencies": {
    "@aws-sdk/client-cloudformation": "~3.50.0",
    "@aws-sdk/client-ecs": "~3.52.0",
    "@types/lodash": "~4.14.165",
    "chalk": "~4.1.2",
    "lodash": "~4.17.20"
  },
  "ava": {
    "files": [
      "src/**/*.spec.ts",
      "test/**/*.spec.ts",
      "!test/mocks/**/*.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "test/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "engines": {
    "node": ">=14",
    "npm": ">=6"
  }
}
